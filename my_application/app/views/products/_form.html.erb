<%= form_with(model: product, class: "product-form") do |form| %>
  <% if product.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :stock, class: "form-label" %>
    <%= form.number_field :stock, class: "form-input" %>
  </div>

   <div class="form-group">
    <%= form.label :invoice%>
    <%= form.file_field :invoice %>
  </div>

  <div class="form-group checkbox-group">
    <%= form.check_box :is_active, class: "form-checkbox" %>
    <%= form.label :is_active, class: "form-label-inline" %>
  </div>

    <div class="form-group">
    <%= form.label :feedback  %>
    <%= form.rich_text_area :feedback %>
  </div>
   <div >
    <%= form.label :item_view  %>
    <%= form.file_field :item_view  %>
  </div>

   <div >
    <%= form.label :email  %>
    <%= form.email_field :email  %>
  </div>
  
     <div >
    <%= form.label :view_items  %>
    <%= form.file_field :view_items , multiple:true %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Product", class: "btn-primary" %>
  </div>
<% end %>


<style>

body {
  background-color: #e0f2fe;
  font-family: sans-serif;
  padding: 20px;
}


.product-form {
  max-width: 500px;
  margin: 2rem auto;
  padding: 1.5rem;
  background: white;
  border-radius: 12px;

  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
}


.form-group {
  margin-bottom: 1.5rem;
}

.form-label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #334155;
}

.form-input {
  width: 100%;
  padding: 0.8rem;
  border: 1px solid #cbd5e1;
  border-radius: 8px;
  box-sizing: border-box; 
}

button, 
input[type="submit"] {
  text-decoration: none;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
  background-color: white;
  color: #0369a1;
  

  box-shadow: 0 0 15px 5px rgba(255, 255, 255, 0.9);
  
  transition: all 0.3s ease;
}

button:hover,
input[type="submit"]:hover {

  box-shadow: 0 0 25px 10px rgba(255, 255, 255, 1);
  transform: translateY(-2px);
}


.error-messages {
  background: #fef2f2;
  border-left: 4px solid #ef4444;
  padding: 1rem;
  margin-bottom: 1.5rem;
  color: #991b1b;
  font-size: 0.9rem;
}
</style>