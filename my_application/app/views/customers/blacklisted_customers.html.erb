

<div class="container">

  <% if notice.present? %>
    <div class="notice">
      <span>âœ“</span> <%= notice %>
    </div>
  <% end %>

  <div class="header">
    <div>
      <h1>Customers</h1>
  
    </div>
    
    <%= link_to new_customer_path, class: "new-customer-btn" do %>
      + New Customer
    <% end %>
     
  </div>

  <div id="customers" class="customers-grid">
 

    <% @customers.each do |customer| %>
      <div class="customer-card">
        
        <div class="customer-info">
          <%= render customer %>
        </div>

        <div class="customer-footer">
          <%= link_to "View Profile", customer, class: "view-profile" %>
        </div>
      </div>
    <% end %>
  </div>

</div>



<style>
.container {
  max-width: 900px;
  margin: 30px auto;
  font-family: sans-serif;
  padding: 0 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding-bottom: 20px;
  margin-bottom: 30px;
}


.new-customer-btn, 
.view-profile {
  display: inline-block;
  text-decoration: none;
  color:White;
  background: #414141;
  # color: #333;
  padding: 8px 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  font-weight: 500;
  text-align: center;
}


.view-profile:hover {
  background: #efefef;
  border-color: #bbb;
}


.notice {
  border: 1px solid #b7e1cd;
  background: #e6f4ea;
  color: #137333;
  padding: 12px;
  margin-bottom: 20px;
  border-radius: 4px;
}


.customers-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 20px;
}


.customer-card {
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 5px;
  background: #fff;
}

.customer-info {
  margin-bottom: 15px;
  line-height: 1.5;
}


.customer-footer {
  margin-top: 10px;
}

.view-profile {
  width: 100%; 
  box-sizing: border-box;
  background-color:#808080
}
</style>