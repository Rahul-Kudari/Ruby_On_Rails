<div style="min-height: 80vh; display: flex; align-items: center; justify-content: center; background: #fdfbf7; padding: 20px;">
  
  <div style="width: 100%; max-width: 420px; background: #ffffff; padding: 40px; border-radius: 16px; border: 1px solid #e8e4db; box-shadow: 0 10px 25px rgba(150, 140, 120, 0.1);">
    
    <div style="margin-bottom: 32px;">
      <h1 style="font-family: 'Inter', system-ui, sans-serif; font-size: 28px; font-weight: 700; color: #2d2d2d; margin: 0;">Welcome</h1>
      <p style="color: #7a7a7a; font-size: 15px; margin-top: 8px;">Enter your details to get started.</p>
    </div>

    <%= form_with(model: customer) do |form| %>
      
      <% if customer.errors.any? %>
        <div style="background: #fff5f5; border-radius: 8px; padding: 16px; margin-bottom: 24px;">
          <p style="color: #c53030; font-weight: 600; font-size: 14px; margin: 0;">Oops! There were some issues:</p>
          <ul style="margin: 8px 0 0; padding-left: 20px; color: #c53030; font-size: 13px;">
            <% customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: 20px;">
        <%= form.label :name, "What is your name?", style: "display: block; font-size: 14px; font-weight: 500; color: #4a4a4a; margin-bottom: 8px;" %>
        <%= form.text_field :name, placeholder: "e.g. Alex Rivera", style: "width: 100%; height: 48px; padding: 0 16px; border: 2px solid #eee; border-radius: 10px; font-size: 16px; transition: border-color 0.2s; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 30px;">
        <%= form.label :email, "Email address", style: "display: block; font-size: 14px; font-weight: 500; color: #4a4a4a; margin-bottom: 8px;" %>
        <%= form.email_field :email, placeholder: "alex@company.com", style: "width: 100%; height: 48px; padding: 0 16px; border: 2px solid #eee; border-radius: 10px; font-size: 16px; box-sizing: border-box;" %>
      </div>

      <%= form.submit "Create Account", style: "width: 100%; height: 52px; background: #1a1a1a; color: #ffffff; border: none; border-radius: 12px; font-size: 16px; font-weight: 600; cursor: pointer; transition: transform 0.1s, background 0.2s;" %>
      
      <p style="text-align: center; font-size: 13px; color: #a0a0a0; margin-top: 24px;">
        By continuing, you agree to our <a href="#" style="color: #1a1a1a; text-decoration: underline;">Terms of Service</a>.
      </p>

    <% end %>

  </div>
</div>