

<div>
  <div>
    
    
      <p>Enter your details to get started.</p>
 

    <%= form_with(model: customer) do |form| %> 
    
      <% if customer.errors.any? %>
        <div>
          <p>Oops! There were some issues:</p>
          <ul>
            <% customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
       

   <div>
   
  <%= form.text_field :name,
        placeholder: "e.g. Alex Rivera",
        required: true %>
</div>


      <div>
        <%= form.label :email, "Email address" %>
        <%= form.email_field :email, placeholder: "alex@company.com" %>
      </div>

      <%= form.submit "Create Account" %>
      
 

    <% end %>

  </div>
</div>

<style>
body {
  font-family: Arial, sans-serif;
  background: #f9f9f9;
  margin: 0;
  padding: 0;
}


div > div {
  max-width: 400px;
  margin: 50px auto;
  padding: 20px;
  background: #fff;
  border-radius: 6px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}


h1 {
  font-size: 24px;
  color: #333;
  margin-bottom: 5px;
}


p {
  font-size: 14px;
  color: #666;
  margin-bottom: 15px;
}


input[type="text"],
input[type="email"] {
  width: 100%;
  padding: 8px;
  margin-bottom: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
}


input[type="submit"] {
  width: 100%;
  padding: 10px;
  background: #4f46e5;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type="submit"]:hover {
  background: #4338ca;
}


ul {
  padding-left: 20px;
  color: #d32f2f;
  font-size: 13px;
}


a {
  color: #4f46e5;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}


</style>