<div id="<%= dom_id customer %>">
  <div>
    <strong>Profile Photo:</strong>
    <div>
      <% if customer.profile_photo.attached? %>
        <%= image_tag url_for(customer.profile_photo) %>
      <% else %>
        <div >
          No Photo
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <strong>Name:</strong>
    <%= customer.name %>
  </div>

  <div>
    <strong>Email:</strong>
    <%= customer.email %>
  </div>

  <div>
    <strong>About Me:</strong>
    <div>
      <%= customer.about_me %>
    </div>
  </div>
</div>