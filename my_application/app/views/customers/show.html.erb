<div class="customer-container">
  
  <div class="back-link">
    <%= link_to "â† Back to customers", customers_path, class: "back-btn" %>
  </div>

  <% if notice.present? %>
    <div class="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="customer-card">
    
    <div class="customer-header">
      <div class="avatar">
        <%= @customer.name[0].upcase if @customer.name.present? %>
      </div>
      <h1><%= @customer.name %></h1>
      <p><%= @customer.email %></p>
    </div>

    <div class="customer-actions">
      <%= link_to "Edit Profile", edit_customer_path(@customer), class: "edit-btn" %>
      
      <div class="danger-zone">
        <p>Danger Zone</p>
        <%= button_to "Delete Customer Record", @customer, method: :delete, form: { data: { confirm: "Are you sure?" } }, class: "delete-btn" %>
      </div>
    </div>

  </div>

</div>

