<div class="customer-container">
  
  <div class="back-link">
    <%= link_to "â† Back to customers", customers_path, class: "back-btn" %>
  </div>

  <% if notice.present? %>
    <div class="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="customer-card">
    
    <div class="customer-header">
      <div class="avatar">
        <%= @customer.name[0].upcase if @customer.name.present? %>
      </div>
      <h1><%= @customer.name %></h1>
      <p><%= @customer.email %></p>
    </div>

    <div class="customer-actions">
      <%= link_to "Edit Profile", edit_customer_path(@customer), class: "edit-btn" %>
      
      <div class="danger-zone">
        <p>Danger Zone</p>
        <%= button_to "Delete Customer Record", @customer, method: :delete, form: { data: { confirm: "Are you sure?" } }, class: "delete-btn" %>
      </div>
    </div>

  </div>

</div>

<style>

.customer-container {
  max-width: 500px;
  margin: 40px auto;
  font-family: sans-serif;
  padding: 0 20px;
}


.back-link {
  margin-bottom: 20px;
}

.back-btn {
  text-decoration: none;
  color: #666;
  font-size: 14px;
}


.notice {
  padding: 10px;
  border: 1px solid #28a745;
  background: #e6ffed;
  margin-bottom: 20px;
}

.customer-card {
  border: 1px solid #ccc;
  padding: 30px;
  text-align: center;
}


.avatar {
  width: 60px;
  height: 60px;
  background: #eee;
  border: 1px solid #ccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15px;
  font-size: 24px;
  font-weight: bold;
}

.customer-header h1 {
  margin: 0;
  font-size: 22px;
}

.customer-header p {
  color: #666;
  margin-top: 5px;
}


.customer-actions {
  margin-top: 30px;
  border-top: 1px solid #eee;
  padding-top: 20px;
}

.edit-btn {
  display: inline-block;
  padding: 10px 20px;
  background: #000;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
}


.danger-zone {
  margin-top: 40px;
  padding: 15px;
  border: 1px solid #ff0000;
}

.danger-zone p {
  color: #ff0000;
  font-weight: bold;
  margin-top: 0;
}

.delete-btn {
  background: #ff0000;
  color: white;
  border: none;
  padding: 8px 16px;
  cursor: pointer;
  border-radius: 4px;
}
</style>